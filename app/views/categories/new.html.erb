<h1>Create new Category</h1>

<%= form_for @category do |f| %>
  <%= f.label 'Category title:' %>
  <%= f.text_field :title %>
  <br />

  <%= f.label 'Category cover image:' %>
  <%= f.file_field :image, id: "file-upload" %>
  <br />

  <%= f.label 'Place:' %>
  <%= f.number_field :place, value: 1 %>
  <br /><br />

  <div class="position-relative">
    <%= f.submit 'Create' %>
    <div class="overlay white opaque hover-reveal hidden" id="upload-helper">
      Wait, file still uploading...
    </div>
  </div>
<% end %>

<a href="javascript:history.back()"> Cancel</a>
