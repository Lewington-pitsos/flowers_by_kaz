<%= form_for [@category, @work] do |f| %>
  <div class="form-group">
    <%= f.label 'Work Name:' %>
    <%= f.text_field :title %>
    <br />
  </div>
  <div class="form-group">
    <%= f.label 'Image:' %>
    <%= f.file_field :image, class: 'file-upload' %>
    <%= render '/shared/hidden_loader' %>
    <br />
  </div>
  <div class="form-group">
    <%= f.label 'Caption:' %>
    <%= f.text_area :caption, rows: 8, cols: 40 %>
    <br /><br />
  <div class="form-group">
    <%= f.label 'Place (1 = first place, 2 = second, etc...):' %>
    <%= f.number_field :place, value: @work.position || 1 %>
    <br /><br />
  </div>
  <div class="position-relative">
    <%= f.submit 'Save changes' %>
    <div class="overlay white opaque hover-reveal hidden" id="upload-helper">
      Wait, file still uploading...
    </div>
  </div>

<% end %>
